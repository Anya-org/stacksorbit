{
  "name": "stacksorbit",
  "version": "1.0.0",
  "description": "Professional GUI deployment tool for Stacks blockchain smart contracts with intelligent pre-checks and process control",
  "main": "index.js",
  "bin": {
    "stacksorbit": "./bin/stacksorbit.js"
  },
  "scripts": {
    "test": "python -m pytest -q",
    "test:unit": "python -m pytest tests/unit/ -q",
    "test:integration": "python -m pytest tests/integration/ -q",
    "test:gui": "python tests/test_gui.py",
    "lint": "eslint bin/stacksorbit.js && pylint stacksorbit.py --exit-zero",
    "format": "prettier --write bin/stacksorbit.js && black stacksorbit.py",
    "ci": "npm install && python -m pip install --upgrade pip && python -m pip install -e .[dev,test] && npm run lint && npm test",
    "prepare": "python setup.py build",
    "prepublishOnly": "npm run ci"
  },
  "keywords": [
    "stacks",
    "blockchain",
    "smart-contracts",
    "deployment",
    "clarity",
    "gui",
    "devtools",
    "web3",
    "clarinet",
    "defi"
  ],
  "author": {
    "name": "Anya Chain Labs",
    "email": "dev@anyachainlabs.com",
    "url": "https://anyachainlabs.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anya-org/stacksorbit.git"
  },
  "bugs": {
    "url": "https://github.com/Anya-org/stacksorbit/issues"
  },
  "homepage": "https://github.com/Anya-org/stacksorbit#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "dependencies": {
    "@stacks/transactions": "^6.13.0",
    "@stacks/network": "^6.13.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0"
  },
  "python": {
    "version": ">=3.8",
    "dependencies": [
      "tkinter",
      "pathlib",
      "subprocess",
      "threading",
      "queue"
    ]
  },
  "peerDependencies": {
    "clarinet": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
